<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%=title%></h1>
        Tournament name:&emsp;<%=tournament.name%>
        <br>
        Descriptions:&emsp;<%=tournament.description%>
        <br>
        <% if(tournament.round == 4) {%>
            The tournament is completed!
        <%} else {%>
            The tournament is currently in round:&emsp;<%=tournament.round%>
        <%}%>

        <% if(players.length > 0) {%>
            <h3>Players in semi-final:</h3>
            <ul>
            <% for(let i=0; i<players.length; i++) { %>
                <li>Position <%= i+1 %>:&emsp;<%= players[i].playername %></li>
                <% if (tournament.round == 2) {%>
                    <td class="text-center col-1"><a href="" class="btn btn-primary">Promote</a></td>
                <%}%>
            <% } %>
            </ul>
        <% } else { %>
            <p>No players found for this tournament.</p>
        <% } %>


        <br><a href="/tournamentList/details/1/<%=tournament._id%>" class="btn btn-warning"><i class="fas fa-chevron-left"></i>Last Round</a>
        <br><br><a href="/tournamentList/details/3/<%=tournament._id%>" class="btn btn-primary">Next Round<i class="fas fa-chevron-right"></i></a>
           </div>
        </div>
    </div>




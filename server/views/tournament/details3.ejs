<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%=title%></h1>
        Tournament name:&emsp;<%=tournament.name%>
        <br>
        Descriptions:&emsp;<%=tournament.description%>

        <% if(players.length > 0) {%>
            <h3>Players in final round:</h3>
            <ul>
            <% for(let i=0; i<players.length; i++) { %>
                <li>Position <%= i+1 %>:&emsp;<%= players[i].playername %></li>
            <% } %>
            </ul>
        <% } else { %>
            <p>No players found for this tournament.</p>
        <% } %>


        <br><a href="/tournamentList" class="btn btn-warning"><i class="fas fa-undo"></i>Back</a>
           </div>
        </div>
    </div>



